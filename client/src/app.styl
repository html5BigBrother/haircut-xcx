page
  font-family "PingFang SC Medium"
  width 100%
  background-color #fff

.flex-1
  flex 1

// 颜色
.color-g
  color #30CB9B
.color-888
  color #888
.color-222
  color #222

// 文字style
.text-style-1
  color #222222
  font-size 32px
  line-height 32px
  font-weight 500
.text-style-2
  color #888888
  font-size 24px
  line-height 24px

// view点击态
.view-hover
  background-color rgba(0, 0, 0, 0.1)
  opacity 0.7

// 按钮
.btn-style
  &::after
    border none
// 按钮 - 颜色
.btn-primary
  background #04C160
  color #fff
.btn-default
  background #fff
  color #888
  border 2px solid #EEEEEE
.btn-orange
  background #EC8140
  color #fff
// 按钮 - 大小
.btn-large
  width 100%
  height 88px
  line-height 88px
// 按钮 - 椭圆
.btn-circle-44
  border-radius 44px
// 按钮 - 其他
.btn-hover
  opacity 0.8
.btn-style[disabled]
  background #BFBFBF
  color #ffffff
  border 0

// 列表样式
.list-style-sheet1
  .sheet1-item-wrap
    padding-left 40px
  .sheet1-item
    padding 32px 30px 32px 0
    display flex
    border-top 2px solid #F2F2F2
  .sheet1-item-content
    flex 1
  .sheet1-item-image
    width 136px
    height 136px
    margin-right 20px
  .sheet1-item-text-1
    color #222222
    font-size 30px
    line-height 30px
    font-weight bold
    margin-bottom 24px
    display flex
    align-items center
  .sheet1-item-text-2
    color #676767
    font-size 26px
    line-height 26px
    &+.sheet1-item-text-2
      margin-top 20px

// check-list 样式
.check-list-style
  .u-label
    box-sizing border-box
    display inline-block
    width 152px
    height 60px
    line-height 60px
    font-size 28px
    color #222222
    text-align center
    border 2px solid #BFBFBF
    border-radius 4px
    margin 0 20px 20px 0
    &:nth-child(4n)
      margin-right 0
    &.checked
      background #EC8140
      border 0
      border 2px solid #EC8140
      color #ffffff
    &.disabled
      background #EFEFEF
      border 0
      border 2px solid #EFEFEF
      color #888888
  .u-checkbox
    display none