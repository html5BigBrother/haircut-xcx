page
  font-family "PingFang SC Medium"
  width 100%
  background-color #fff

.flex-1
  flex 1

// 颜色
.color-g
  color #30CB9B

// view点击态
.view-hover
  background-color rgba(0, 0, 0, 0.1)
  opacity 0.7

// 按钮
.btn-style
  &::after
    border none
.btn-primary
  background #04C160
  color #fff
.btn-default
  background #fff
  color #888
  border 2px solid #EEEEEE
.btn-orange
  background #EC8140
  color #fff
.btn-hover
  opacity 0.8

// 遮罩层
.mask
  position fixed
  z-index 1000
  top 0
  right 0
  left 0
  bottom 0
  background rgba(0,0,0,0.6)

// 列表样式
.list-style-sheet1
  .sheet1-item-wrap
    padding-left 40px
  .sheet1-item
    padding 32px 30px 32px 0
    display flex
    border-top 2px solid #F2F2F2
  .sheet1-item-content
    flex 1
  .sheet1-item-image
    width 136px
    height 136px
    margin-right 20px
  .sheet1-item-text-1
    color #222222
    font-size 30px
    line-height 30px
    font-weight bold
    margin-bottom 24px
    display flex
    align-items center
  .sheet1-item-text-2
    color #676767
    font-size 26px
    line-height 26px
    &+.sheet1-item-text-2
      margin-top 20px