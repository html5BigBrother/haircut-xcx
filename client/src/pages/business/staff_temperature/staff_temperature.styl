
.margin-r-8
  margin-right 8px
.margin-r-20
  margin-right 20px

.p-temperature-list
  font-size 28px
  color #222
  .u-temperature-head
    display flex
    align-items center
    height 92px
    background #F6F6F6
    padding-right 35px
  .u-temperature-title
    font-size 32px
    padding-left 40px
  .u-item
    display flex
    align-items center
    height 92px
    border-bottom 2px solid #F2F2F2
    margin-left 40px
    padding-right 35px


.p-form
  padding 0 0 200px 40px
  .u-item
    display flex
    align-items center
    border-bottom 2px solid #EAEAEA
    padding 32px 0
    font-size 32px
    line-height 32px
    color #222
  .u-name
    width 100px
  .u-input
    flex 1

.p-bottom-btn
  position absolute
  bottom 40px
  left 0
  right 0
  padding 0 40px
