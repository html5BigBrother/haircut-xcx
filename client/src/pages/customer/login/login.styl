page
  height 100%
.p-page
  display flex
  align-items center
  height 100%
.p-contain
  flex 1
  display flex
  position relative
  flex-direction column
  padding 0 80px
  .u-btn
    width 100%
    border-radius 0
    height 88px
    line-height 88px
    &+.u-btn
      margin-top 32px
  .u-logo-box
    position absolute
    left 0
    right 0
    bottom 374px
    display flex
    flex-direction column
    align-items center
  .u-logo-icon
    width 102px
    height 102px
    margin-bottom 20px
  .u-logo-text
    color #222
    font-size 30px
    line-height 30px

.p-form
  padding 0 0 200px 40px
  .u-item
    display flex
    align-items center
    border-bottom 2px solid #EAEAEA
    padding 42px 0 24px 0
    font-size 32px
    line-height 32px
    color #222
  .u-name
    width 200px
  .u-input
    flex 1