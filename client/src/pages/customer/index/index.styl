.p-contain
  padding-bottom 140px
.p-tab-bar
  padding-top 0

// 商家列表 页面
.p-section-business
  padding-top 40px
  .u-title
    font-size 32px
    color #222222
    line-height 32px
    padding-left 40px
.p-list-business
  margin-top 24px

// 已预约记录 页面
.p-item-card
  border-bottom 16px solid #F2F2F2
  padding 32px 40px
  &:first-child
    border-top 16px solid #F2F2F2
  .u-item-form
    display flex
    align-items center
    font-size 28px
    line-height 28px
    color #000
    &+.u-item-form
      margin-top 24px
    .u-item-form-name
      width 112px
      text-align left
.p-user-detail
  padding 40px
  display flex
  align-items center
  .u-detail-info
    margin-left 18px
  .u-detail-name
    color #000000
    font-size 40px
    line-height 40px
    margin-bottom 16px
    font-weight 500
  .u-detail-phone
    color #888888
    font-size 28px
    line-height 28px

// 我的 页面
.p-operation-list
  .u-item
    display flex
    align-items center
    padding 32px 40px
    color #222
    font-size 28px
    line-height 28px
    border-bottom 16px solid #F2F2F2
    &:first-child
      border-top 16px solid #F2F2F2
  .u-item-value
    flex 1
    text-align right
    margin-right 16px
.p-bottom-btn
  position absolute
  bottom 128px
  left 0
  right 0
  padding 0 40px
  .u-btn
    width 100%
    border-radius 44px
    border-color #CFCCCC
    height 88px
    line-height 88px
