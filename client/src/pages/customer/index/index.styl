.p-contain
  padding-bottom 140px
.p-section-business
  padding 40px 40px 0 40px
  .u-title
    font-size 32px
    color #222222
    line-height 32px
.p-list-business
  margin-top 24px
  .u-item
    padding 32px 30px 32px 0
    display flex
    align-items center
    border-top 2px solid #F2F2F2
  .u-item-image
    width 136px
    height 136px
    margin-right 20px
  .u-item-text-1
    color #222222
    font-size 30px
    line-height 30px
    font-weight bold
    margin-bottom 24px
    display flex
    align-items center
  .u-item-text-2
    color #676767
    font-size 26px
    line-height 26px
    &+.u-item-text-2
      margin-top 20px

.p-item-card
  border-bottom 16px solid #F2F2F2
  padding 32px 40px
  &:first-child
    border-top 16px solid #F2F2F2
  .u-item-form
    display flex
    align-items center
    font-size 28px
    line-height 28px
    color #000
    &+.u-item-form
      margin-top 24px
    .u-item-form-name
      width 112px
      text-align left