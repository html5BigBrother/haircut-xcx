
.layout-warp
  position fixed
  z-index 801
  .layout-mask
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.3)
    opacity 0
    visibility hidden
    transition all 300ms ease-in
  .layout-container
    display flex
    flex-direction column
    position fixed
    bottom 0
    width 100%
    min-height 300px
    border-radius 20px 20px 0px 0px
    background-color #ffffff
    transition all 300ms  cubic-bezier(0.36, 0.66, 0.04, 1)
    transform translate3d(0, 100%, 0)
  .layout-container-title
    color #222
    font-size 32px
    text-align center
    padding 40px 0
    font-weight 500
  .layout-container-body
    flex 1
  .layout-container-footer
    padding 40px

  .layout-close
    position absolute
    right 40px
    top 40px
    z-index 100
.layout-show
  .layout-mask
    opacity 1
    visibility visible
  .layout-container
    transform translate3d(0, 0, 0)
    